{
  "mcpServers": {
    "firestoredb": {
      "command": "npx",
      "args": ["-y", "mcpfirestoredb@1.1.1"],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "/path/to/service-account.json",
        "FIREBASE_PROJECT_ID": "your-firebase-project",
        "FIRESTORE_DATABASE_ID": "(default)"
      }
    }
  }
}